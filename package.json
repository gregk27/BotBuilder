{
	"name": "ler-botbuilder",
	"displayName": "LER BotBuilder",
	"description": "An extension to generate code snippets for FRC team 2708",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:subsystems"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ler-botbuilder.refresh",
				"title": "Refresh BotBuilder",
				"icon": "$(refresh)"
			},
			{
				"command": "ler-botbuilder.toggleScope",
				"title": "Toggle BotBuilder scope"
			},
			{
				"command": "ler-botbuilder.openFile",
				"title": "Open",
				"icon": "$(file-symlink-file)"
			},
			{
				"command": "ler-botbuilder.newSubsystem",
				"title": "Botbuilder: New Subsystem",
				"icon": "$(plus)"
			},
			{
				"command": "ler-botbuilder.newCommand",
				"title": "Botbuilder: New Command",
				"icon": "$(plus)"
			},
			{
				"command": "ler-botbuilder.setup",
				"title": "Botbuilder: Initialize botbuilder for this workspace"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ler-botbuilder",
					"title": "LER BotBuilder",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"ler-botbuilder": [
				{
					"id": "subsystems",
					"name": "Subsystems",
					"contextualTitle": "BotBuilder",
					"icon": "resources/subsystem.svg"
				},
				{
					"id": "commands",
					"name": "commands",
					"contextualTitle": "BotBuilder",
					"icon": "resources/command.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "ler-botbuilder.refresh",
					"when": "view == subsystems || view == commands",
					"group": "navigation"
				},
				{
					"command": "ler-botbuilder.newSubsystem",
					"when": "view == subsystems",
					"group": "navigation"
				},
				{
					"command": "ler-botbuilder.newCommand",
					"when": "view == commands",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ler-botbuilder.openFile",
					"when": "viewItem == subsystem || viewItem == command || viewItem == method",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "ler-botbuilder.refresh",
					"when": "never"
				},
				{
					"command": "ler-botbuilder.openFile",
					"when": "never"
				}
			]
		},
		"configuration": {
			"title": "Botbuilder",
			"properties": {
				"ler-botbuilder.configPath":{
					"type": "string",
					"default": "/botbuilder.json",
					"markdownDescription": "The path to the `botbuilder.json` configuration file, relative to the workspace root"
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "botbuilder.json",
				"url": "./resources/config.schema.json"
			}
		],
		"viewsWelcome": [
			{
			  "view": "subsystems",
			  "contents": "This project does not appear to use Botbuilder.\n[Initialize Botbuilder](command:ler-botbuilder.setup)"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && npx webpack",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/parserTest.js",
		"classBuilderTest": "cls && npm run compile && node ./out/src/test/classBuilderTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@types/big.js": "^4.0.5",
		"big.js": "^5.2.2",
		"java-class-tools": "^1.3.2",
		"ts-loader": "^8.0.1",
		"webpack": "^4.44.0"
	}
}
